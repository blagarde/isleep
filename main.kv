#:kivy 1.4

BoxLayout:
    orientation: "vertical"
    Label:
        id: intro
    BetterTextInput:
        id: path
        multiline: False
        on_text_validate: app.setpath()
    Label:
        id: progress
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Start capture"
            on_press: app.start()
        Button:
            text: "Stop capture"
            on_press: app.stop()
        Button:
            text: "Quit"
            on_press: app.quit()
